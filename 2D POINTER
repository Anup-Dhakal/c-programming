#include<stdio.h>

void main()
{
    int a[3][3],b[3][3],c[3][3];
    int i,j;
    int *p,*q,*r;
    p=&a[0][0];
    q=&b[0][0];
    
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            printf("Enter %d%d element of matrix A = ",i+1,j+1);
            scanf("%d",(p+3*i+j));
        }
    }
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            printf("Enter %d%d element of matrix B = ",i+1,j+1);
            scanf("%d",(p+3*i+j));
        }
    }
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            c[i][j]=a[i][j] + b[i][j];
        }
    }

  for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
        {
            printf("%d\t",c[i][j]);
           
        }
        printf("\n");
    }


}
